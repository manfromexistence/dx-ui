{
  "name": "js.foresight-devtools",
  "version": "1.0.7",
  "description": "Visual debugging tools for ForesightJS - mouse trajectory prediction and element interaction visualization",
  "type": "module",
  "scripts": {
    "build": "tsup --clean --minify",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "prettier": "prettier --write .",
    "lint": "eslint . --fix",
    "prepublishOnly": "pnpm lint && pnpm test:run && pnpm build"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "homepage": "https://foresightjs.com/docs/getting_started/development_tools",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spaansba/ForesightJS/tree/main/packages/devpage"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "foresight",
    "debugger",
    "mouse-trajectory",
    "visualization",
    "debug-tools",
    "development",
    "foresightjs",
    "devtools"
  ],
  "author": "Bart Spaans",
  "license": "MIT",
  "peerDependencies": {
    "js.foresight": "^3.1.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "js.foresight": "workspace:*",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@thednp/position-observer": "^1.1.0",
    "lit": "^3.3.0"
  }
}
